<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aplikacjaObecnosc">

    <uses-permission android:name="android.permission.NFC"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-feature android:name="android.hardware.nfc"
        android:required="true"/>
    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".NfcModule"></activity>
        <activity android:name=".Student.ZmienSwojeHasloActivity" />
        <activity android:name=".Student.WyswietlGrupeStudentowActivity" />
        <activity android:name=".Student.WyswietlZajeciaActivity" />
        <activity android:name=".Admin.ZmienHasloActivity" />
        <activity android:name=".Admin.DodajZajeciaActivity" />
        <activity android:name=".Admin.DodajStudentaActivity" />
        <activity android:name=".Admin.WyswietlStudentowActivity" />
        <activity android:name=".Student.StudentActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Admin.AdminActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>