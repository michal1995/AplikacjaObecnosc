<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.ZmienSwojeHasloActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"

        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_margin="5dp"
        app:cardPreventCornerOverlap="false"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="60dp"
                    android:layout_height="44dp"
                    android:text="Imie:"
                    android:textStyle="bold"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tvSwojeImie"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="TextView"

                    android:textColor="@android:color/black"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Nazwisko:"
                    android:textStyle="bold"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tvSwojeNazwisko"
                    android:layout_width="162dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:textSize="22sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="42dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Haslo:"
                    android:textStyle="bold"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/etSwojeHaslo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="22sp"
                    />

            </TableRow>

            <Button
                android:id="@+id/bZmienSwojeHaslo"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:text="ZatwierdÅº"
                android:background="@drawable/radious_button"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>